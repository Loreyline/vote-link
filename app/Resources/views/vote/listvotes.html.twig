{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        body {
            font-family: calibri;
            width: 1200px;
            margin-left: auto;
            margin-right: auto
        }
        table {
            border-collapse: collapse
        }
        th {
            background: lightgray
        }
        th, td {
            text-align: left;
            padding-left: 5px;
            padding-right: 5px
        }
        table th, td {
            border: 1px solid lightgray;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2
        }
    </style>
{% endblock %}

{% block body %}
    <table style="width:100%">
      <tr>
        <th style=width:45%>User name</th>
        <th style=width:45%>Link URL</th>
        <th style=width:10%>Status</th>
      </tr>
      {% for vote in votes %}
        <tr>
          <td>{{ vote.user }}</td>
          <td>{{ vote.url }}</td>
          <td>{{ vote.status }}</td>
        </tr>
      {% endfor %}
    </table>
{% endblock %}
