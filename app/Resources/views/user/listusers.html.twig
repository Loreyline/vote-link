{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block stylesheets %}
    <style>
        body {
            font-family: calibri;
            width: 1200px;
            margin-left: auto;
            margin-right: auto
        }
        table {
            border-collapse: collapse
        }
        th {
            background: lightgray
        }
        th, td {
            text-align: left;
            padding-left: 5px;
            padding-right: 5px
        }
        table th, td {
            border: 1px solid lightgray;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2
        }    
    </style>
{% endblock %}

{% block body %}
    <table style="width:100%">
      <tr>
        <th style=width:35%>Name</th>
        <th style=width:35%>E-mail</th>
        <th style=width:10%>Likes</th>
        <th style=width:10%>Dislikes</th>
        <th style=width:10%>Total votes</th>
      </tr>
      {% for user in users %}
        <tr>
          <td>{{ user.name }}</td>
          <td>{{ user.email }}</td>
          <td>{{ user.likes }}</td>
          <td>{{ user.dislikes }}</td>
          <td>{{ user.votes }}</td>
        </tr>
      {% endfor %}
    </table>
{% endblock %}
